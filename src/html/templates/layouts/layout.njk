{% import "../macro/macro.njk" as macro %}

<!DOCTYPE html>
<html lang="ru">

<head>
  {% include "../base/head.njk" %}
  {% block head %}{% endblock %}
</head>


<body>
  <div class="page-wrapper {{ 'overflow-visible' if overflowVisible == true }}">
    {% block header %}
    {% include "../base/header.njk" %}
    {% endblock %}
    <div class="main-content {{ 'page-offset-b' if pageOffset == true }}">
      {% block content %}{% endblock content %}
    </div>
    {% block footer %}
    {% include "../base/footer.njk" %}
    {% endblock footer %}
  </div>
  {% block scripts %}
  {% include "../base/scripts.njk" %}
  {% endblock %}
</body>

</html>
